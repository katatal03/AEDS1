#include <iostream>

using namespace std;


#include<stdio.h>
#include<stdlib.h>
#include<stdbool.h>

class Data
{
    private :
       int dia;
       int mes;
       int ano;

    public :
        // dia
       void setDia(int d)
       {
           bool pertence= true;

            if(d <= 0 || d >= 31)
            {

                  pertence=false;
                  cout<<"\a data invalida"<<endl;

            }
            if(pertence==true)

           this->dia=d;
       }
       int getDia()
       {
           return dia;
       }

       //mes
       void setMes(int m)
       {
           bool pertence= true;

            if(m <= 0 || m >= 12)
            {

                  pertence=false;
                  cout<<"\a data invalida"<<endl;

            }
            if(pertence==true)
            {
              this->mes =m;
            }

       }


       int getMes()
       {
           return mes;
       }

       // ano
        void setAno(int a)
       {
           bool pertence= true;

            if(a <= 0 || a >= 2022)
            {

                  pertence=false;
                  cout<<"\a data invalida"<<endl;

            }
            if(pertence==true)

           this->ano=a;
       }

       int getAno()
       {
           return ano;
       }

       int getdia()
       {
           return this->dia;
       }
       int getmes()
       {
           return this->mes;
       }
       int getano()
       {
           return this->ano;
       }

void escrevaData()
       {
          printf("%i/%i/%i", getDia(), getMes(), getAno());
       }
       void leiaData()
       {
            int dia, mes, ano;
             scanf("%i/%i/%i", &dia, &mes, &ano);
             this->setDia(dia);
             this->setMes(mes);
             this->setAno(ano);
       }

};

class Aluno{
private:
    string nome;
    Data nascimento;
public:

   void setNome(string nome)
    {
        this->nome = nome;
    }
    void setNascimento(int dia, int mes, int ano)
    {
        nascimento.setDia(dia);
        nascimento.setMes(mes);
        nascimento.setAno( ano);
    }
    string getNome()
    {
        return this->nome;
    }
    void leiaAluno()
    {
        string nome;
        printf("\nNome: ");
        cin >> nome;
        this->setNome(nome);
        printf("\nNascimento: ");
        nascimento.leiaData();
    }
    void escrevaAluno()
    {
        cout << "\nNome: " << this->getNome();
        printf("\nNascimento: ");
        nascimento.escrevaData();
    }
};




