
#include<stdio.h>
#include<stdlib.h>
#include<stdbool.h>
#include<ctype.h>

void apresentacao();
float lerH();
float lerGenero();
float Cpi(float h, char genero);
void escreva (float pesoIdeal);
int main()
{
    apresentacao();
    float h;
    char genero;
    float pesoIdeal;

    h=lerH();
    while(h!=0)
    {
    genero=lerGenero();
    pesoIdeal=Cpi(h,genero);
    escreva(pesoIdeal);
    h=lerH();
    }
}

void apresentacao()
{
    printf("\n Peso Ideal\n ");
    return;
}

float lerH()
{
    float x;
    printf("\n digite a altura [diferente de 0]");
    scanf("%f",&x);
    return x;
}

float lerGenero()
{
    char genero;
    bool erro;
    do
    {
    printf("\n digite o seu genero [f/m]");
    scanf(" %c",&genero);
    genero=toupper(genero);
    erro= genero!='M' && genero!='F';
    if(erro)
    {
        printf("\n\a resposta invalida...");
    }
    } while(erro);

   return genero;
}

float Pmas(float h);
float pfam(float h);
float Cpi(float h, char genero)
{
    float pesoIdeal;
    if(genero=='M')
    {
        pesoIdeal= Pmas(h);
    }
    else(genero=='F');
    {
        pesoIdeal= eHfem(h);
    }
    return pesoIdeal;
}

float Pmas(float h)
{
    return 72.7*h-58;
}

float eHfem(float h)
{
    return 62.1*h-44.7;
}

void escreva (float pesoIdeal)
{
    printf("\n o peso ideal e %f",pesoIdeal);
}