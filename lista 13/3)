#include<stdio.h>
#include<stdlib.h>
#include<stdbool.h>

void apresentacao();
float lerBase();
float lerH();
float resultado (float base, float h);
void escreva(float res);
int main()
{
   apresentacao();
   float base=lerBase();
   float h=lerH();
   float res=resultado(base,h);
   escreva(res);
   return 0;
}


void apresentacao()
{
    printf("\n area de um retangulo \n");
    return;
}

float lerBase()
{
    float x;
    printf("\n qual a base do retangulo:  ");
    scanf("%f",&x);
    return x;
}

float lerH()
{
    float y;
    printf("\n qual a altura do retangulo:  ");
    scanf("%f",&y);
    return y;
}

float resultado (float base, float h)
{
    float res=base*h;
    return res;
}
 void escreva(float res)
 {
     printf("\n a area do retangulo e %f",res);
     return;
 }