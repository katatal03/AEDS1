#include<stdio.h>
#include<stdlib.h>
#include<stdbool.h>

void apresentacao();
float lerValor();
float lerMaior(float a, float b);
void escreva(float maior);
int main()
{
    apresentacao();
    float a=lerValor();
    float b=lerValor();
    float maior=lerMaior(a,b);
    escreva(maior);
}

void apresentacao()
{
    printf("\n o maior entre dois numeros \n");
    return;
}

float lerValor()
{
    float x;
    printf("\n digite o valor:  ");
    scanf("%f",&x);
    return x;
}

float lerMaior(float a, float b)
{
 float maior;

 if(a>b)
  {
    maior=a;
  }
    else
   {
        maior=b;
   }
    return maior;
}

void escreva(float maior)
{
    printf("\n o maior numero e %f",maior);
}